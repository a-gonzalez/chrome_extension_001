{
    "name": "Color Change",
    "version": "1.0",
    "description": "Extension that allows user to change the background color of any page on developer.chrome.com",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions" : [
        "storage",
        "declarativeContent",
        "activeTab"
    ],
    "page_action": {
        "default_popup": "./view/popup.html",
        "default_icon": {
            "16": "./images/icon16.png",
            "32": "./images/icon32.png",
            "48": "./images/icon48.png",
            "128": "./images/icon128.png"
        }
    },
    "icons": {
        "16": "./images/icon16.png",
        "32": "./images/icon32.png",
        "48": "./images/icon48.png",
        "128": "./images/icon128.png"
    },
    "options_page": "./view/options.html"
}